{{#each articles}}
<div class="article-content" id={{this._id}}>
    <h4>
        <a href="{{this.link}}" target="_blank">{{this.title}}</a>
        <form action="/save/{{this._id}}" method="POST">
            <button type="submit" class="status" value="{{this.status}}">{{this.status}}</button>
            {{#unless this.note}}
            <button type="button" class="notecreate-button" value="{{this._id}}">Comment</button>
            {{/unless}} {{#if this.note}}
            <button type="button" class="notecreate-button" value="{{this._id}}">Edit Comment</button>
            {{/if}}
        </form>
    </h4>
    <summary>{{this.summary}}</summary>
    <img class="media" src="{{this.img}}">
</div>
{{/each}}